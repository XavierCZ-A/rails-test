<div class="product-card mx-auto max-w-3xl bg-white rounded-lg shadow-md p-6 mb-8" >
  
  <div class="flex items-center justify-between">
    <div class="mr-8">
      <p class="font-semibold">Store Name:</p>
      <p><%= product.store_name %></p>
    </div>

    <div class="mr-8">
      <p class="font-semibold">Store Section:</p>
      <p><%= product.store_section.name %></p>
    </div>

    <div class="mr-8">
      <p class="font-semibold">Product:</p>
      <p><%= product.name %></p>
    </div>

    <div class="mr-8">
      <p class="font-semibold">Quantity:</p>
      <p><%= product.quantity %></p>
    </div>

    <div>
      <%= form_with(model: product, local: true) do |form| %>
        <%= form.submit "Purchased", name: "purchased", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>


  </div>
</div>



